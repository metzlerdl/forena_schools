<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE root [
<!ENTITY nbsp "&#160;">
]>
<html xmlns:frx="urn:FrxReports">
<head>
<title>Interactive Profile Graph Test</title>
<frx:category>Student</frx:category>
<frx:options form="InteractiveGraph"/>
<frx:fields/>
<frx:parameters>
	<frx:parm id="profile_id" label="Profile" type="select" data_source="ims/student/performance_profiles" data_field="profile_id" label_field="name"/>   
	<frx:parm id="school_year" type="hidden"/>
</frx:parameters>
<frx:docgen>
</frx:docgen>
<frx:menu path="student/:person_id/profile_interactive" type="local-task" title="Performance"/>
</head>
<body>
	<div id="person" frx:block="ims/student/person_info" frx:foreach="*">
	  <h1 frx:renderer="FrxTitle">{last_name}, {first_name}</h1>
	</div>
	<div frx:renderer="FrxParameterForm" collapsible="0" title="Select Profile"/>
  <div id="profile" frx:block="ims/profiles/profile" frx:foreach="*">
    <h2>{name}</h2>
  </div>

  <div id="subject_performance" frx:block="ims/student/profile_performance">
    <div frx:frenderer="FrxXML"/>
		<svg frx:type="scatterplot" 
      frx:renderer="FrxSVGGraph" 
      frx:series_1="{norm_score}" 
      frx:label="{grade}" 
      frx:guideline="3"
      frx:tooltip = "{name}: {score}"
      frx:best_fit="straight" 
      frx:label_x="Grade Level" 
      frx:label_y="Normalized Score"/>
		<table>
		<thead>
		 <tr>
		   <th>Date</th>
		   <th>Measure</th>
		   <th>Score</th>
		   <th>Normalized Score</th>
		 </tr>
		</thead>
		<tbody>
		<tr frx:foreach="*">
		  <td>{date_taken}</td>
		  <td>{test_abbrev} {name}</td>
		  <td>{score}</td>
		  <td>{norm_score}</td>
		</tr>
		</tbody></table>
	</div>
  

  <h3>Student Performance by Subject</h3>

	<div id="subject_performance" frx:block="ims/student/subject_performance_summary" frx:parameters="3subjects=1" >
    <p> 
      The following graph demonstrates normalized scores on a scale from 1-5 for graphable subject areas over a 
      averaged over a two year history.
    </p>
    <svg frx:renderer="FrxSVGGraph" frx:type="radargraph"
      series_1="{norm_score}" label="{subject}" axis_max_v="5" 
      grid_division_v="1" grid_back_stripe="1" 
      grid_back_colour="white"
      guideline="3"
      guideline_colour="green"
      grid_back_stripe_colour="#ddd"/>
	</div>
</body>
</html>
