<?xml version="1.0"?>
<html xmlns:frx="urn:FrxReports">
<head>
<title>Teacher Dashboard</title>
<frx:category>District</frx:category>
<frx:options hidden="1" form="" />
<frx:parameters>
</frx:parameters>
<frx:fields>
  <frx:field id="year_label" 
    link="reports/PrimaryTeacherDashboard?school_year={school_year}&amp;staff_id={parm.staff_id}&amp;"
  /> 
	<frx:field id="@title" link="{@path}?bldg_id={parm.bldg_id}" />
	<frx:field id="@grade_name"
		link="{bldg.building_dashboard}?bldg_id={bldg.bldg_id}&amp;grade_level={@grade_level}&amp;school_year={parm.school_year}" />
	<frx:field id="@name"
		link="group/{@group_id}" />
	<frx:field id="group_name"
		link="group/{group_id}" />
</frx:fields>
<frx:parameters />
<frx:docgen />
</head>
<body>

	<div id="teacher_info" frx:block="ims/teacher/info" class="span12 page-info">
		<h1><big>{row/first_name} {row/last_name}</big></h1>
	</div>

	<div id="menu-1" class="span2">

		<div frx:block="ims/teacher/grade_levels" id="bldg" frx:foreach="*" class="side-block">
		  <h2>Grades</h2>
		  <ul class="nav">
			<li frx:foreach="grades/*" id="forena-2">{@grade_name}</li>
			</ul>
		</div>

		<div id="school_years" class="side-block" frx:block="ims/school_years">
	    <h2>Year</h2>
	    <ul class="nav">
	      <li frx:foreach="*" class="{year_selected}">{year_label}</li>
	    </ul>
	  </div>
	</div>
	<div class="span1"> </div>
	<div class="span9 pull-right">
		<h2>Classes</h2>
		<table frx:block="ims/teacher/courses_by_teacher" class="table">
			<tbody frx:foreach="*">
				<tr>
					<th colspan="5" class="indent1"><h3>{bldg_name}</h3>
					</th>
				</tr>
				<tr frx:foreach="courses/course">
					<td class="indent2">{@name}</td>
				</tr>
			</tbody>
		</table>
		<div frx:block="ims/teacher/groups">
		<h3>Intervention Groups</h3>
		<table >
			<tr frx:foreach="*">
				<td>{group_name}</td>
			</tr>
		</table>
		</div>
	</div>

</body>
</html>
