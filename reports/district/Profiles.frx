<html xmlns:frx="urn:FrxReports">
<head>
<title>Profile Definitions</title>
<frx:fields>
  <frx:field id="name" link="profile/{profile_id}/edit"/>
  <frx:field id="old_profile_edit" link="flexpopup/ProfileEditor?profile_id={profile_id}" target="popup_{profile_id}">Legacy Edit</frx:field>
  <frx:field id="add" link="profile/add">Add Assessment Profile</frx:field>
  <frx:field id="delete_profile" link="profile/{profile_id}/delete">Delete</frx:field>
</frx:fields>
</head>
<body>
  <div>
  <p>{add}</p>
  </div>
  <div frx:block="ims/profiles/list_all">
    <h2>Profiles</h2>
    <table>
      <thead>
        <tr><th>Building</th>
        <th>Profile</th>
        <th>Grade Levels</th>
        <th>Type</th>
        <th>Displays</th>
        <th>Action</th></tr>
      </thead>
      <tbody>
        <tr frx:foreach="*">
          <td>{building}</td>
          <td>{name}</td>
          <td>{grades}</td>
          <td>{profile_type}</td>
          <td>{grade_display} {group_display} {student_display}</td>
          <td>{delete_profile} {old_profile_edit}</td>
        </tr>
      </tbody>
    </table>
  </div>  
</body>
</html>