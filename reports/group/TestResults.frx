<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE root [
<!ENTITY nbsp "&#160;">
]>
<html xmlns:frx="urn:FrxReports">
<head>
<frx:options hidden="1" />
<frx:fields>
	<frx:field id="bldg.name"
		link="reports/BuildingDashboard?bldg_id={bldg_id}" />
	<frx:field id="grade_name"
		link="{bldg.building_dashboard}?bldg_id={bldg_id}&amp;grade_level={parm.grade_level}" />
	<frx:field id="last_name" link="student/{person_id}" />
	<frx:field id="export"
		link="reports/group.TestResults.csv?test_id={parm.test_id}&amp;group_id={parm.group_id}&amp;grade_level={parm.grade_level}&amp;school_year={parm.school_year}&amp;seq={parm.seq}">Export to .csv</frx:field>
</frx:fields>

<title>Test Results</title>
<style>
  svg { max-width: 800px;; max-height: 600px; width: 100%; height: 100%; }
</style>
</head>
<body>
<div id="schedule" frx:block="ims/tests/schedule" frx:foreach="*" ></div> 

<div frx:block="ims/group/details" id="group" frx:foreach="*">
	<h1 frx:renderer="frxTitle">{group.name}, {year_label} {test_name} - {sched_label}</h1>
 	<h3>{first_name} {last_name}</h3>
</div>
<h3>Scores</h3>
<div class="pedagoggle-scores"
				frx:block="ims/group/group_test_scores">
				<table frx:renderer="FrxPedagoggleScores" frx:profile="schedule">
					<thead>
						<tr>
							<th class="name" width="150px;">Name</th>
							<th style="display: none;">SIS ID</th>
							<th style="display: none;">Building</th>
							<th style="display: none;">Grade</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td class="name" width="150px;">{last_name}, {first_name}</td>
							<td style="display: none;">{sis_id}</td>
							<td style="display: none;">{sis_code}</td>
							<td style="display: none;">{grade}</td>
						</tr>
					</tbody>
				</table>
			</div>
 <h3>Statistics</h3>
 <p>
					<strong>Performance Distribution:</strong> The below graph
					demonstrates the percentage of students tested performing at each
					level.
				</p>
 <div id="schedule-stats" frx:block="ims/group/group_test_statistics">
				
      <svg id="test-chart" frx:renderer="FrxSVGGraph"
        frx:link="group.MeasureStatistics?group_id={parm.group_id}&amp;measure_id={measure_id}&amp;school_year={parm.school_year}&amp;seq={parm.seq}"
        frx:type="stackedbargraph" frx:xpath="*" 
        frx:height="600"
        frx:width="800"
        frx:series_1="{l1_percent}"
        frx:series_2="{l2_percent}"
        frx:series_3="{l3_percent}"
        frx:series_4="{l4_percent}"
        frx:label="{abbrev}"
        frx:colour_1="#E3B5B5"
        frx:colour_2="#E3E288"
        frx:colour_3="#BBE3B5"
        frx:colour_4="#B5C0E3"
        frx:axis_max_v="100.0"
        frx:grid_division_v="10">
    </svg>
				<table class="table table-bordered">
					<thead>
						<tr>
							<th>measure</th>
							<th>building average</th>
							<th>district average</th>
							<th>% struggling</th>
							<th>% below</th>
							<th>% met</th>
							<th>% exceeded</th>
							<th>% met standard</th>
						</tr>
					</thead>
					<tbody>
						<tr frx:foreach="*">
							<td>{name}</td>
							<td>{avg_score}</td>
							<td>{b_score}</td>
							<td>{l1_percent}%</td>
							<td>{l2_percent}%</td>
							<td>{l3_percent}%</td>
							<td>{l4_percent}%</td>
							<td>{percent_met}%</td>
						</tr>
					</tbody>
				</table>
</div>
<div id="footer-block">
		<ul class="nav hnav">
			<li>{export}</li>
		</ul>
</div>
</body>
</html>